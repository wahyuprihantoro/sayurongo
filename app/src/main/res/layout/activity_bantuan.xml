<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottom"
                android:background="#f7f7f7"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#c6c6c6"
                    android:gravity="center_horizontal"
                    android:padding="15dp"
                    android:text="FAQ"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:id="@+id/ask7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bagaimana cara memesan sayur menggunakan aplikasi?"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/ans7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pada peta yang berada di home Anda, pilih tukang sayur terdekat yang diinginkan dengan men tap pada simbolnya. Kemudian pada halaman ‘PROFIL PENJUAL’, Anda dapat melihat profil penjual sayur beserta list dagangan yang dijualnya pada hari ini. Jika sesuai dengan yang Anda cari, tap pada tombol tambah untuk menambah dan kurang untuk mengurangi jumlah yang ingin dibeli. Jika sudah selesai, tap pada tombol LANJUTKAN. Pada halaman KONFIRMASI, Anda dapat melihat total belanja beserta pilihan belanja—diantar atau beli langsung—. Jika sesuai, tap tombol PROSES. Selanjutnya, apabila Anda memilih opsi beli langsung maka Anda dapat langsung menemui penjual sayur tersebut. Jika Anda memilih opsi diantar, maka Anda dapat menunggu telepon atau pesan singkat dari penjual terkait mekanisme berbelanja."
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/ask1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bagaimana cara mengganti bahasa yang digunakan?"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap pada tombol menu yang terletak pada sebelah kiri atas header hingga sidebar menu muncul. Kemudian pilih ‘Pengaturan’, setelah  itu pilih opsi ’Bahasa’. Selanjutnya klik pada bahasa yang ingin digunakan."
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/ask2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bagaimana cara mengubah profil saya?"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap pada tombol menu yang terletak pada sebelah kiri atas header hingga sidebar menu muncul. Selanjutnya tap pada ikon edit atau pensil yang terletak di sebelah kiri foto profil Anda. Setelah muncul halaman UBAH PROFIL, isi data yang ingin Anda ubah. Simpan data dengan men tap tombol ceklist."
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/ask3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bagaimana cara mengisi ‘List Dagangan’ harian?"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/ans3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap pada tombol menu yang terletak pada sebelah kiri atas header hingga sidebar menu muncul. Pilih menu ‘Dagangan’, selanjutnya pada halaman DAGANGAN, isi list dagangan harian Anda dengan tap pada ikon tambah. Kemudian akan muncul 5 box informasi dagangan—terdiri dari jenis (sayur, buah, daging, ikan, dan bumbu), nama (nama jenis seperti ikan bandeng dsb), harga, satuan penjualan, serta jumlah dagangan yang dijual ke pembeli— yang dapat Anda isi sesuai keinginan. Apabila Anda ingin menghapus dagangan Anda, maka Anda dapat men tap tombol silang yang terletak paling kiri pada masing-masing baris isi dagangan. Jika sudah selesai mengisi list dagangan harian, simpan data dengan men tap tombol ceklist yang terletak di paling bawah halaman."
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/ask4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bagaimana cara mengetahui lokasi pembeli dan penjual sayur lainnya?"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/ans4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pada peta yang tampil di home Anda, lokasi Anda ditunjukan dengan pin berwarna merah. Sedangkan, pengguna lainnya ditunjukan melalui simbol dengan warna berbeda. Warna jingga menunjukan lokasi penjual sayur lainnya dan warna hijau menunjukan lokasi pembeli. Sebagai penjual, Anda dapat mengetahui profil dan isi dagangan penjual sayur lainnya dengan men tap simbol pengguna berwarna jingga."
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/ask5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bagaimana cara mengetahui pesanan belanja sayur yang masuk?"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/ans5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap pada tombol menu yang terletak pada sebelah kiri atas header hingga sidebar menu muncul. Pilih menu ‘Pesanan’, selanjutnya pada halaman PESANAN akan ditampilkan pesanan dari pembeli yang masuk per tanggal, lengkap dengan rincian belanja serta profil pembeli. Sebagai penjual, Anda dapat menerima pesanan dengan menekan tombol ceklist atau menolak pesanan dengan menekan tombol silang."
                            android:textSize="15sp" />

                        <!--<TextView-->
                            <!--android:id="@+id/ask6"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="Bagaimana cara mencari penjual sayur di lokasi tertentu?"-->
                            <!--android:textColor="#000"-->
                            <!--android:textSize="15sp" />-->

                        <!--<TextView-->
                            <!--android:id="@+id/ans6"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="Tap pada simbol cari yang terletak pada header, hingga muncul box yang dapat Anda isi dengan alamat yang Anda inginkan. Setelah itu, akan muncul lokasi penjual sayur terdekat dengan lokasi yang dituju."-->
                            <!--android:textSize="15sp" />-->


                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#c6c6c6"
                    android:gravity="center_horizontal"
                    android:padding="15dp"
                    android:text="Masukan Pertanyaan Lain"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <Button
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="#aed581"
                    android:text="Submit" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="id.prihantoro.sayurongo.fragment.FragmentDrawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />
</android.support.v4.widget.DrawerLayout>
