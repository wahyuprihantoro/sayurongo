<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:layout_above="@+id/bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f7f7f7"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#c6c6c6"
                    android:gravity="center_horizontal"
                    android:padding="15dp"
                    android:text="FAQ"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:id="@+id/ask1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bagaimana cara melakukan pembelian?"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi ullamcorper faucibus vestibulum. Duis felis lacus, bibendum ut ultricies sed, vehicula at elit. Integer cursus nulla eu ex pulvinar, vitae ultricies enim interdum."
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/ask2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bagaimana cara mendaftar?"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Curabitur sit amet convallis purus, ut ultrices turpis. Praesent dictum nulla eu odio bibendum, et tempor metus pretium. Maecenas blandit et est et efficitur. Cras nibh dolor, semper nec neque nec, hendrerit malesuada mauris. Praesent pellentesque vitae libero sit amet lobortis."
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/ask3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bagaimana cara mengubah profil?"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Praesent maximus tellus at feugiat ultricies. Nullam suscipit urna nec egestas varius. In sapien ipsum, bibendum eget purus eu, euismod sodales purus."
                            android:textSize="15sp" />
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#c6c6c6"
                    android:gravity="center_horizontal"
                    android:padding="15dp"
                    android:text="Masukan Pertanyaan Lain"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <Button
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="#aed581"
                    android:text="Submit" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="id.prihantoro.sayurongo.fragment.FragmentDrawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />
</android.support.v4.widget.DrawerLayout>
